schema {
    query: Query
    mutation: Mutation
}

type Query {
    project(
        id: ID!
    ) : Project

    projects : [Project]

    sample(
        id: ID!
    ) : Sample

    sequencingRun(
        id: ID!
    ) : SequencingRun

    sequencingRuns : [SequencingRun]
}

type Mutation {
    createProject(
        name: String!
        organism: String
        projectDescription: String
        remoteUrl: String
        assembleUploads: Boolean!
    ) : Project!

    createSample(
        sampleName: String!
        organism: String
    ) : Sample!
}

type Project {
    id: ID!
    name: String!
    createdDate: String!
    modifiedDate: String
    projectDescription: String
    remoteUrl: String
    assembleUploads: Boolean
    samples: [Sample]
    organism: String
    genomeSize: Int
    minimumCoverage: Int
    maximumCoverage: Int
    syncFrequency: String
    label: String
}

type Sample {
    id: ID!
    createdDate: String!
    modifiedDate: String
    sampleName: String
    description: String
    organism: String
    isolate: String
    strain: String
    collectedBy: String
    collectionDate: String
    geographicLocationName: String
    isolationSource: String
    latitude: String
    longitude: String
    projects: [Project]
    label: String
    sequencingFiles: [SequencingFile]
}

type SequencingRun {
    id: ID!
    description: String
    createdDate: String!
    modifiedDate: String!
    uploadStatus: String!
    layoutType: String!
    sequencingFiles: [SequencingFile]
}

type SequencingFile {
    id: ID!
    file: String!
    createdDate: String!
    modifiedDate: String
    uploadSha256: String
}
